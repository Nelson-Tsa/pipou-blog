# Variables d'environnement pour le déploiement sur Vercel
# OBLIGATOIRE : Générez une nouvelle clé secrète pour la production
SECRET_KEY=your-secret-key-here

# Mode debug (toujours False en production)
DEBUG=False

# URL de la base de données PostgreSQL (OBLIGATOIRE pour Vercel)
DATABASE_URL=postgresql://username:password@hostname:port/database_name

# Alternative : Variables individuelles de base de données (si DATABASE_URL n'est pas utilisé)
# DB_NAME=pipou_blog
# DB_USER=postgres
# DB_PASSWORD=your_password
# DB_HOST=localhost
# DB_PORT=5432
